<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/history_entry_text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#91c250"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:text="Finished"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/history_entry_text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 April 2018"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/block1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_entry_text_status">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_notification"
            app:tint="#f7ce00" />

        <TextView
            android:id="@+id/history_entry_text_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Le Centre Pompidou, Paris"
            android:textColor="#000000" />
    </LinearLayout>

    <View
        android:layout_width="2dp"
        android:layout_height="30dp"
        android:layout_marginStart="9dp"
        android:background="#f7ce00"
        app:layout_constraintBottom_toTopOf="@+id/block2"
        app:layout_constraintStart_toStartOf="@+id/block1"
        app:layout_constraintTop_toBottomOf="@+id/block1" />

    <LinearLayout
        android:id="@+id/block2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/block1">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_notification"
            app:tint="#f7ce00" />

        <TextView
            android:id="@+id/history_entry_text_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-black"
            android:text="Louis Vuitton Foundation"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/block2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_time_24" />

        <TextView
            android:id="@+id/history_entry_text_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="3:30 PM" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/block4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/block3"
        app:layout_constraintTop_toTopOf="@+id/block3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_car_24" />

        <TextView
            android:id="@+id/history_entry_text_tarif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Economy" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/block5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/block4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_credit_card_24" />

        <TextView
            android:id="@+id/history_entry_text_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cash" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
